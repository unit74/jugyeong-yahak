<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.chat.model.mapper.UserMapper">

	<resultMap type="user" id="users">
		<result column="user_id" property="userId"/>
		<result column="user_password" property="userPwd"/>
	</resultMap>

	<select id="getUser" parameterType="user" resultMap="users">
		select user_id, user_password
		from users
		where user_id = #{userId} and user_password = #{userPwd}
	</select>
	
	<insert id="registUser" parameterType="user">
		insert into users (user_id, user_password)
		values (#{userId}, #{userPwd})
	</insert>

</mapper>